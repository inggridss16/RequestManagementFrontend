@{
}
<style>
    .is-invalid {
        border-color: red;
    }

    .invalid-feedback {
        color: red;
        font-size: 0.8rem;
    }
</style>
<section>
    <div class="" id="user-detail" >
        <input type="hidden" value="@ViewData["WebAPIUrl"]" id="hdn-web-api-url" />
        <input type="hidden" class="form-control" id="hdn-user-id" />
        <div class="form-group">
            <label for="">Username<span style="color:red;">*</span></label>
            <input type="text" class="form-control" id="txt-user-name" placeholder="type name..">
            <div class="invalid-feedback"></div>
        </div>
        <div class="form-group">
            <label for="">Password<span style="color:red;">*</span></label>
            <input type="password" class="form-control" id="txt-password" placeholder="type password..">
            <div class="invalid-feedback"></div>
        </div>
        <div class="form-group">
            <label for="">Organization<span style="color:red;">*</span></label>
            <select class="form-control" id="ddl-organization">
            </select>
            <div class="invalid-feedback"></div>
        </div>
        <div class="form-group">
            <label for="">Division<span style="color:red;">*</span></label>
            <select class="form-control" id="ddl-division">
            </select>
            <div class="invalid-feedback"></div>
        </div>
        <div class="form-group">
            <label for="">Role<span style="color:red;">*</span></label>
            <select class="form-control" id="ddl-role">
            </select>
            <div class="invalid-feedback"></div>
        </div>
        
        <button id="bt-create-user" class="btn btn-primary" data-style="zoom-in" style="margin-top:20px;">
            <i class=""></i> Create
        </button>
        <button id="bt-update-user" class="btn btn-primary" data-style="zoom-in" style="margin-top:20px;">
            <i class=""></i> Update
        </button>
        <button id="bt-delete-user" class="btn btn-danger" data-style="zoom-in" style="margin-top:20px;">
            <i class=""></i> Delete
        </button>

    </div>
</section>

<script src="~/js/User/details.js"></script>