@{
}
<style>
    .is-invalid {
        border-color: red;
    }

    .invalid-feedback {
        color: red;
        font-size: 0.8rem;
    }
</style>
<section>
    <div class="" id="permission-detail" >
        <input type="hidden" value="@ViewData["WebAPIUrl"]" id="hdn-web-api-url" />
        <input type="hidden" class="form-control" id="hdn-user-id" />
        <div class="form-group">
            <label for="">Role<span style="color:red;">*</span></label>
            <select class="form-control" id="ddl-role">
            </select>
            <div class="invalid-feedback"></div>
        </div>
        <div class="form-group">
            <label for="">Menu<span style="color:red;">*</span></label>
            <select class="form-control" id="ddl-menu">
            </select>
            <div class="invalid-feedback"></div>
        </div>
        <div class="form-group">
            <label for="">Create</label>
            <select class="form-control" id="ddl-create">
                <option value="0">No</option>
                <option value="1">Yes</option>
            </select>
        </div>
        <div class="form-group">
            <label for="">Read</label>
            <select class="form-control" id="ddl-read">
                <option value="0">No</option>
                <option value="1">Yes</option>
            </select>
        </div>
        <div class="form-group">
            <label for="">Update</label>
            <select class="form-control" id="ddl-update">
                <option value="0">No</option>
                <option value="1">Yes</option>
            </select>
        </div>
        <div class="form-group">
            <label for="">Delete</label>
            <select class="form-control" id="ddl-delete">
                <option value="0">No</option>
                <option value="1">Yes</option>
            </select>
        </div>

        <button id="bt-create-permission" class="btn btn-primary" data-style="zoom-in" style="margin-top:20px;">
            <i class=""></i> Create
        </button>
        <button id="bt-update-permission" class="btn btn-primary" data-style="zoom-in" style="margin-top:20px;">
            <i class=""></i> Update
        </button>

    </div>
</section>

<script src="~/js/Permission/details.js"></script>