@{
}

<section>
    <input type="hidden" value="@ViewData["WebAPIUrl"]" id="hdn-web-api-url" />
    <input type="hidden" class="form-control" id="txt-request-id" />
    <div class="form-group">
        <label for="">Request</label>
        <input type="text" class="form-control" id="txt-request-number" placeholder="0" value="0">
    </div>
    <div class="form-group">
        <label for="">Amount</label>
        <input type="text" class="form-control" id="txt-amount" placeholder="0" value="0">
    </div>
    <div class="form-group">
        <label for="">Type</label>
        <select class="form-control" id="ddl-type">
        </select>
    </div>
    <div class="form-group">
        <label>Comment <span>*</span></label>
        <textarea class="form-control" id="ta-comment" rows="3" maxlength="250"></textarea>
    </div>
    <div class="form-group">
        <label for="">Imported</label>
        <select class="form-control" id="ddl-imported">
            <option value="True">Yes</option>
            <option value="False">No</option>
        </select>
    </div>
    <button id="bt-create-expense" class="btn btn-primary" data-style="zoom-in" style="margin-top:20px;">
        <i class=""></i> Create
    </button>
    <button id="bt-update-expense" class="btn btn-primary" data-style="zoom-in" style="margin-top:20px;">
        <i class=""></i> Update
    </button>
    <button id="bt-delete-expense" class="btn btn-danger" data-style="zoom-in" style="margin-top:20px;">
        <i class=""></i> Delete
    </button>
</section>

<script src="~/js/Request/expense.js"></script>